#!/bin/bash

  readonly progName=$(/usr/bin/basename ${0})
  readonly progVersion="1.0"

  if [ $# -lt 2 ] || [ $# -gt 2 ]; then
    echo "Error: Invalid arguments"
    echo "  Usage"
    echo "    ${progName} \\"
    echo "      --path \"Path to Bundle\"" && exit
  fi

  positional=()

  while [[ $# -gt 0 ]]; do
    key="${1}"
    case "${key}" in
      -p|--path)
      path="$2"
      shift
      ;;
      *)
      positional+=("$1")
      shift
      ;;
    esac
  done

  set -- "${positional[@]}"

  /usr/sbin/chown -R $(/usr/local/bin/currentuser):staff "${path}"
