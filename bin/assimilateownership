#!/bin/bash

prog_name=$(basename "${0}")

if [ $# -lt 2 ] || [ $# -gt 2 ]; then
  echo "Error: Invalid arguments"
  echo "  Usage"
  echo "    ${prog_name} \\"
  echo "      --path \"Path to Bundle\"" && exit
fi

positional=()

while [[ $# -gt 0 ]]; do
  key="${1}"
  case "${key}" in
  -p | --path)
    path="$2"
    shift
    ;;
  *)
    positional+=("$1")
    shift
    ;;
  esac
done

set -- "${positional[@]}"

chown -R :staff "${path}"
chmod -R 755 "${path}"
